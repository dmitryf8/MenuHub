<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
   >

    <data>
        <variable
            name="mainViewModel"
            type="com.mcoolapp.menuhub.model.chat.com.mcoolapp.menuhub.viewmodel.MainViewModel" />
    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:openDrawer="start">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true" android:orientation="vertical"
            >

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/background_gradient"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/activity_little_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"

                    >

                    <ImageView
                        android:id="@+id/backActionArrowButton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_chevron_left_black_24dp"
                        android:adjustViewBounds="true"
                        app:mutableVisibility="@{mainViewModel.backArrowButtonVisibility}"/>

                    <TextView
                        android:id="@+id/header_title"
                        style="@style/MenuHub.HeaderText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:layout_marginBottom="10dp"
                        android:text="техст"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_marginRight="16dp"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:id="@+id/cartImageView"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_shopping_cart_black_24dp"
                            android:adjustViewBounds="true"
                            app:mutableVisibility="@{mainViewModel.cartVisibility}"/>
                    </LinearLayout>

                </LinearLayout>


            </com.google.android.material.appbar.AppBarLayout>


            <fragment
                android:id="@+id/nav_host_fragment"
                android:name="androidx.navigation.fragment.NavHostFragment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:defaultNavHost="true"
                app:navGraph="@navigation/app_navigation" />



        </LinearLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/whiteColor"
            android:fitsSystemWindows="true"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:orientation="vertical">/

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/nav_menu_button_padding"
                    android:layout_weight="2"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/nav_header_desc"
                    android:paddingTop="@dimen/nav_header_vertical_spacing"
                    android:src="@drawable/menuhub_logo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:paddingTop="40dp"
                    android:paddingRight="@dimen/nav_menu_button_padding">

                    <Button
                        android:id="@+id/searchMenuButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/menu_button_shape"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/nav_menu_button_padding"
                        android:text="@string/search_menu"
                        android:textAllCaps="true"
                        android:textColor="@color/mainColor"
                        android:textSize="@dimen/nav_menu_button_text_size"
                        android:onClick="@{() -> mainViewModel.onSearchMenuClick()}"/>

                    <LinearLayout
                        android:id="@+id/llBelowSearchButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical"
                        app:mutableVisibility="@{mainViewModel.searchMenuVisibility}"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/nav_submenu_button_padding"
                            android:layout_weight="1"
                            android:background="@drawable/submenu_button_shape"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/nav_menu_button_padding"
                            android:text="@string/search_menu_on_map"
                            android:textColor="@color/blackColor"
                            android:textSize="@dimen/nav_menu_button_text_size" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/nav_submenu_button_padding"
                            android:layout_weight="1"
                            android:background="@drawable/submenu_button_shape"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/nav_menu_button_padding"
                            android:text="@string/search_dish"
                            android:textColor="@color/blackColor"
                            android:textSize="@dimen/nav_menu_button_text_size" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/imOnTheSpotButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/menu_button_shape"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/nav_menu_button_padding"
                        android:text="@string/im_on_the_spot"
                        android:textAllCaps="true"
                        android:textColor="@color/mainColor"
                        android:textSize="@dimen/nav_menu_button_text_size"
                        android:onClick="@{() -> mainViewModel.onImOnTheSpotMenuClick()}"
                        />

                    <LinearLayout
                        android:id="@+id/llBelowSettingsButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical"
                        mutableVisibility="@{mainViewModel.imOnTheSpotVisibility}">

                        <TextView
                            android:id="@+id/readQRTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/nav_submenu_button_padding"
                            android:layout_weight="1"
                            android:background="@drawable/submenu_button_shape"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/nav_menu_button_padding"
                            android:text="@string/readQR"
                            android:textColor="@color/blackColor"
                            android:textSize="@dimen/nav_menu_button_text_size" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/nav_submenu_button_padding"
                            android:layout_weight="1"
                            android:background="@drawable/submenu_button_shape"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/nav_menu_button_padding"
                            android:text="@string/open_menu"
                            android:textColor="@color/blackColor"
                            android:textSize="@dimen/nav_menu_button_text_size" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/settingsButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/menu_button_shape"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/nav_menu_button_padding"
                        android:text="@string/settings"
                        android:textAllCaps="true"
                        android:textColor="@color/mainColor"
                        android:textSize="@dimen/nav_menu_button_text_size"
                        android:onClick="@{() -> mainViewModel.onSettingsMenuClick()}"/>

                    <LinearLayout
                        android:id="@+id/llBelowAboutAppButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical"
                        mutableVisibility="@{mainViewModel.settingsMenuVisibility}">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/nav_submenu_button_padding"
                            android:layout_weight="1"
                            android:background="@drawable/submenu_button_shape"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/nav_menu_button_padding"
                            android:text="@string/profile"
                            android:textColor="@color/blackColor"
                            android:textSize="@dimen/nav_menu_button_text_size" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/nav_submenu_button_padding"
                            android:layout_weight="1"
                            android:background="@drawable/submenu_button_shape"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/nav_menu_button_padding"
                            android:text="@string/payment"
                            android:textColor="@color/blackColor"
                            android:textSize="@dimen/nav_menu_button_text_size" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/nav_submenu_button_padding"
                            android:layout_weight="1"
                            android:background="@drawable/submenu_button_shape"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/nav_menu_button_padding"
                            android:text="@string/app_settings"
                            android:textColor="@color/blackColor"
                            android:textSize="@dimen/nav_menu_button_text_size" />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </com.google.android.material.navigation.NavigationView>
    </androidx.drawerlayout.widget.DrawerLayout>
</layout>